{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "obsidian-efforts",
  "title": "obsidian-efforts",
  "description": "View and manage effort notes in obsidian.",
  "icon": "command-icon.png",
  "author": "rpuncel",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Efforts",
      "description": "Show effort notes in obsidian.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "effortsFolder",
      "description": "The folder where efforts of varying intensities live.",
      "type": "directory",
      "required": true,
      "title": "Efforts Folder"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}